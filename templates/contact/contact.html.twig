{% extends 'base.html.twig' %}
{% block title %}Contact{% endblock %}
{% block body %}
    {{ include('home/nav.html.twig') }}
    <br>
    <br>
    <section class="page-section" id="contact">
        <div class="container">

            <!-- Contact Section Heading -->
            <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Me Contacter</h2>

            <!-- Icon Divider -->
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>

            <!-- Contact Section Form -->
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}

                    {{ form_start(contactForm) }}
                    <!-- To configure the contact form email address, go to mail/contact_me.php and update the email address in the PHP file on line 19. -->
                       <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                <label>Name</label>
                                <input class="form-control" id="contact_nom" name=contact[nom] type="text" placeholder="Nom" required="required" data-validation-required-message="Please enter your name.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                    {% do contactForm.nom.setRendered %}


                        <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                <label>Email Address</label>
                                <input class="form-control" id="contact_mail" name="contact[mail]" type="email" placeholder="Adresse Mail" required="required" data-validation-required-message="Please enter your email address.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                    {% do contactForm.mail.setRendered %}

                    <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                <label>Phone Number</label>
                                <input class="form-control" id="contact_num" name="contact[num]" type="tel" placeholder="Numéro de Téléphone" required="required" data-validation-required-message="Please enter your phone number.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                    {% do contactForm.num.setRendered %}

                    <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                <label>Message</label>
                                <textarea class="form-control" id="contact_message" name="contact[message]" rows="5" placeholder="Message" required="required" data-validation-required-message="Please enter a message."></textarea>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                    {% do contactForm.message.setRendered %}

                    <br>
                        <div id="success"></div>
                        <div class="form-group">
                            <button type="submit" id="contact_Envoyer" name=contact[Envoyer] class="btn btn-primary btn-xl" id="sendMessageButton">Envoyer</button>
                        </div>
                    {% do contactForm.Envoyer.setRendered %}

                    <input type="hidden" id="contact__token" name="contact[_token]" value="UT4ZsOXtkZajKEu_DV1E5AslcgnW-F_C3rmMSTT9pB4">
                    {{ form_end(contactForm) }}


                </div>
            </div>
        </div>
    </section>
{% endblock %}